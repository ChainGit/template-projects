<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--使用PageHelper时SQL语句末尾不要有分号-->
<mapper namespace="com.chain.project.test.mapper.PersonMapper">

    <!--不要log就是EhcacheCache,默认在日记级别为DEBUG时可以看到-->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <select id="findById" parameterType="long" resultType="PersonEntity">
        SELECT *
        FROM t_test
        WHERE id = #{id} AND delete_flag = 0
    </select>

    <select id="queryListAll" resultType="PersonEntity">
        SELECT *
        FROM t_test
        WHERE delete_flag = 0
    </select>

    <update id="update" parameterType="PersonEntity">
        UPDATE t_test
        SET name = #{name}, age = #{age}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        UPDATE t_test
        SET delete_flag = 1
        WHERE id = #{id}
    </delete>

    <insert id="insert" parameterType="PersonEntity">
        INSERT INTO t_test (name, age) VALUES (#{name}, #{age})
    </insert>

</mapper>